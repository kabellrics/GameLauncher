<Page
    x:Class="GameLauncher.Admin.Views.BibliothèqueDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:winuicontrols="using:CommunityToolkit.WinUI.Controls"
    xmlns:models="using:GameLauncher.Admin.Core.Models"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <ScrollViewer
            IsTabStop="True">
            <StackPanel
                x:Name="contentPanel">
                <TextBlock
                        x:Name="title"
                        Margin="{StaticResource XXSmallTopMargin}"
                       HorizontalAlignment="Center"                        
                        Style="{ThemeResource TitleTextBlockStyle}"
                        Text="{x:Bind ViewModel.Item.Name, Mode=OneWay}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
